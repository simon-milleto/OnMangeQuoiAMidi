{% extends 'base.html.twig' %}

{% block body %}
    <h1>Place</h1>

    <table class="table table-striped">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ place.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ place.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ place.description }}</td>
        </tr>
        <tr>
            <th>City</th>
            <td>{{ place.city }}</td>
        </tr>
        <tr>
            <th>Street</th>
            <td>{{ place.street }}</td>
        </tr>
        <tr>
            <th>Zip Code</th>
            <td>{{ place.zipCode }}</td>
        </tr>
        <tr>
            <th>Country</th>
            <td>{{ place.country }}</td>
        </tr>
        <tr>
            <th>Phone</th>
            <td>{{ place.phone }}</td>
        </tr>
        <tr>
            <th>Mobile</th>
            <td>{{ place.mobile }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ place.email }}</td>
        </tr>
        <tr>
            <th>Website</th>
            <td>{{ place.website }}</td>
        </tr>
        <tr>
            <th>Facebook</th>
            <td>{{ place.facebook }}</td>
        </tr>
        <tr>
            <th>Meals</th>
            <td>
                <ul>
                    {% for meal in place.meals %}
                        <li>{{ meal.name }}<a href="{{ path('meal_delete', { 'id': meal.id }) }}"><span
                                        class="glyphicon glyphicon-remove" aria-hidden="true"></span></a></li>
                    {% endfor %}
                </ul>
            </td>
        </tr>
        <tr>
            <th>Menus</th>
            <td>
                <ul>
                    {% for menu in place.menus %}
                        <li>
                            {{ menu.name }}
                            <ul>
                                {% for meal in menu.meals %}
                                    <li>{{ meal.name }}</li>
                                {% endfor %}
                            </ul>
                        </li>
                    {% endfor %}
                </ul>
            </td>
        </tr>
        </tbody>
    </table>

    <h3>Add a Meal</h3>

    {{ form_start(add_meal_form) }}
    {{ form_widget(add_meal_form) }}

    <input type="submit" value="Add" class="btn btn-primary"/>

    {{ form_end(add_meal_form) }}

    <h3>Add a Menu</h3>

    {{ form_start(add_menu_form) }}
    {{ form_widget(add_menu_form) }}

    <input type="submit" value="Add" class="btn btn-primary"/>

    {{ form_end(add_menu_form) }}

    <br>

    <a href="{{ path('place_edit', { 'id': place.id }) }}" class="btn btn-primary"><i
                class="glyphicon glyphicon-edit"></i> Edit</a>
    <a href="{{ path('place_index') }}" class="btn btn-default"><i class="glyphicon glyphicon-th-list"></i> Back to the
        list</a>

    {{ form_start(delete_form) }}
    <input type="submit" value="Delete" class="btn btn-danger">
    {{ form_end(delete_form) }}
{% endblock %}
